@{
    ViewData["Title"] = "Security Policy (Add)";
}

@model MIPSDK_WebApp1.Models.PolicyViewModel

<h1 class="mb-4">Add Data Policy</h1>

<div class="card">
    <div class="card-header">
        <h4>DataPolicy</h4>
    </div>
    <div class="card-body">
        <form asp-action="Add">
            <div class="form-group mb-3">
                <label asp-for="PolicyName" class="control-label">Policy Name</label>
                <input asp-for="PolicyName" class="form-control" />
                <span asp-validation-for="PolicyName" class="text-danger"></span>
            </div>
            <div class="form-group mb-3">
                <label asp-for="SelectedLabelId" class="control-label">Label Name</label>
                <select asp-for="SelectedLabelId" class="form-control" asp-items="@(new SelectList(Model.Labels, "Id", "Name"))">
                    <option value="">-- Select Label --</option>
                </select>
                <span asp-validation-for="SelectedLabelId" class="text-danger"></span>
            </div>
            <div class="form-group mb-3">
                <button type="submit" class="btn btn-primary" id="addPolicy">Create</button>
                <a class="btn btn-secondary text-white" id="back" asp-area="" asp-controller="SecurityPolicy" asp-action="Index">Back</a>
            </div>
        </form>
    </div>
</div>
