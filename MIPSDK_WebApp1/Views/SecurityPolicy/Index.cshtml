@{
    ViewData["Title"] = "Security Policy (Index)";
}

@model List<MIPSDK_WebApp1.Models.PolicyViewModel>

<div class="container mt-5">
    <h1 class="mb-4">Security Policy</h1>

    <table class="table table-striped table-bordered table-hover table-fixed">
        <thead class="table-dark">
            <tr>
                <th>Policy Name</th>
                <th>Label Name</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @if (Model.Count == 0)
            {
                <tr>
                    <td colspan="3" class="text-center">No policies available. Please create one.</td>
                </tr>    
            }
            else
            {
                @foreach (var policy in Model)
                {
                    <tr>
                        <td>@policy.PolicyName</td>
                        <td>@policy.LabelName</td>
                        <td>
                            <div class="d-flex">
                                <a asp-controller="SecurityPolicy" asp-action="Edit" asp-route-id="@policy.Id" class="btn btn-sm btn-primary mx-1">Edit</a>
                                <form asp-controller="SecurityPolicy" asp-action="Delete" asp-route-id="@policy.Id" method="post">
                                    <button type="submit" class="btn btn-sm btn-danger">Delete</button>
                                </form>
                            </div>
                        </td>
                    </tr>
                }
            }
        </tbody>
    </table>
    <div class="mb-3">
        <a class="btn btn-success text-white" asp-controller="Securitypolicy" asp-action="Add">Create Policy</a>
    </div>
    <div class="alert alert-info mt-5">
        <h3>Download Policy</h3>
        <p>Downloaded files will have the label Id specified in the download policy applied.</p>
    </div>

    <div class="alert alert-info mt-3">
        <h3>Upload Policy</h3>
        <p>Uploaded files must have a label equal to, or lower than, the sensitivity of the label defined in the upload policy.</p>
    </div>
</div>
