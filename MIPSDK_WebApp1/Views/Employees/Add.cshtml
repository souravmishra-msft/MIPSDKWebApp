@{
    ViewData["Title"] = "Add Employee Details";
}

@* To access the viewModel properties inside the cshtml file. *@
@model MIPSDK_WebApp1.Models.AddEmployeeViewModel

<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <h1 class="mt-5">Add Employee Details</h1>

            @if (Model != null && !string.IsNullOrEmpty(Model.SuccessMessage))
            {
                <div class="alert alert-success" role="alert">
                    @Model.SuccessMessage
                </div>
            }

            <form method="post">
                <div class="mt-3">
                    <label class="form-label">FirstName</label>
                    <input type="text" class="form-control" id="firstname" placeholder="Enter first name" asp-for="FirstName" />
                </div>
                <div class="mt-3">
                    <label class="form-label">LastName</label>
                    <input type="text" class="form-control" id="lastname" placeholder="Enter last name" asp-for="LastName" />
                </div>
                <div class="mt-3">
                    <label class="form-label">Title</label>
                    <input type="text" class="form-control" id="title" placeholder="Enter title" asp-for="Title" />
                </div>
                <div class="mt-3">
                    <label class="form-label">Date of Birth</label>
                    <input type="text" class="form-control" id="dob" placeholder="Enter DoB" asp-for="Dob" />
                </div>
                <div class="mt-3">
                    <label class="form-label">Hire Date</label>
                    <input type="text" class="form-control" id="HireDate" placeholder="Enter Hire Date" asp-for="HireDate" />
                </div>
                <div class="mt-3">
                    <label class="form-label">Salary</label>
                    <input type="number" class="form-control" id="salary" placeholder="Enter Salary" asp-for="Salary" />
                </div>
                <div class="mt-3">
                    <label class="form-label">PAN</label>
                    <input type="text" class="form-control" id="pan" placeholder="Enter PAN Number" asp-for="PAN" />
                </div>
                
                <div class="mt-3">
                    <button type="submit" class="btn btn-primary" id="addEmployee">Save</button>
                </div>
            </form>
        </div>
    </div>
</div>