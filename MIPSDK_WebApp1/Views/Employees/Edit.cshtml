@{
    ViewData["Title"] = "Edit Employee Details";
}

@model MIPSDK_WebApp1.Models.Entities.Employee

<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <h1 class="mt-5">Edit Employee Details</h1>

            @if (Model == null)
            {
                <div class="alert alert-success" role="alert">
                    <p>No employee was found with this Id</p>
                </div>
            }
            else
            {
                <form method="post">
                    <div class="mt-3">
                        <label class="form-label">Id</label>
                        <input type="text" class="form-control" id="id" placeholder="" asp-for="Id" readonly />
                    </div>
                    <div class="mt-3">
                        <label class="form-label">EmpId</label>
                        <input type="text" class="form-control" id="empId" placeholder="" asp-for="EmpId" readonly />
                    </div>
                    <div class="mt-3">
                        <label class="form-label">FirstName</label>
                        <input type="text" class="form-control" id="firstname" placeholder="Enter first name" asp-for="FirstName" />
                    </div>
                    <div class="mt-3">
                        <label class="form-label">LastName</label>
                        <input type="text" class="form-control" id="lastname" placeholder="Enter last name" asp-for="LastName" />
                    </div>
                    <div class="mt-3">
                        <label class="form-label">Title</label>
                        <input type="text" class="form-control" id="title" placeholder="Enter title" asp-for="Title" />
                    </div>
                    <div class="mt-3">
                        <label class="form-label">Date of Birth</label>
                        <input type="text" class="form-control" id="dob" placeholder="Enter DoB" asp-for="Dob" />
                    </div>
                    <div class="mt-3">
                        <label class="form-label">Hire Date</label>
                        <input type="text" class="form-control" id="HireDate" placeholder="Enter Hire Date" asp-for="HireDate" />
                    </div>
                    <div class="mt-3">
                        <label class="form-label">Salary</label>
                        <input type="number" class="form-control" id="salary" placeholder="Enter Salary" asp-for="Salary" />
                    </div>
                    <div class="mt-3">
                        <label class="form-label">PAN</label>
                        <input type="text" class="form-control" id="pan" placeholder="Enter PAN Number" asp-for="PAN" />
                    </div>
                    <div class="mt-3">
                        <button type="submit" class="btn btn-primary" id="editEmployee">Update</button>
                        <button type="submit" class="btn btn-danger ms-2" id="deleteEmployee" asp-controller="Employees" asp-action="Delete">Delete</button>
                        <a class="btn btn-secondary ms-2 text-white" id="back" asp-area="" asp-controller="Employees" asp-action="List">Back</a>
                    </div>
                </form>
            }
        </div>
    </div>
</div>
