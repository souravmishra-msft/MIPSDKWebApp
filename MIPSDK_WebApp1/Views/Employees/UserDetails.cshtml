@{
    ViewData["Title"] = "Employee Details";
}

@model MIPSDK_WebApp1.Models.Entities.Employee

<div class="container mt-5">
    <h1 class="text-center mb-4">Employee Details</h1>
    <div class="table-responsive">
        <table class="table table-striped table-bordered">
            <thead class="table-dark">
                <tr>
                    <th class="text-nowrap">Id</th>
                    <th class="text-nowrap">Employee-Id</th>
                    <th class="text-nowrap">First Name</th>
                    <th class="text-nowrap">Last Name</th>
                    <th class="text-nowrap">Title</th>
                    <th class="text-nowrap">Date of Birth</th>
                    <th class="text-nowrap">Hire Date</th>
                    <th class="text-nowrap">Salary</th>
                    <th class="text-nowrap">PAN</th>
                </tr>
            </thead>
            <tbody>
                <tr>
                    <td>@Model.Id</td>
                    <td>@Model.EmpId</td>
                    <td>@Model.FirstName</td>
                    <td>@Model.LastName</td>
                    <td>@Model.Title</td>
                    <td>@Model.Dob.ToString("dd-MM-yyyy")</td>
                    <td>@Model.HireDate.ToString("dd-MM-yyyy")</td>
                    <td>$@Model.Salary</td>
                    <td>@Model.PAN</td>
                </tr>
            </tbody>
        </table>
    </div>
    <div class="mt-3">
        <div class="d-flex">
            <a class="btn btn-primary" id="editEmployee" asp-controller="Employees" asp-action="Edit" asp-route-id="@Model.Id">Edit</a>
            <form asp-controller="employees" asp-action="Delete" asp-route-id="@Model.Id" method="post" class="mx-1">
                <button type="submit" class="btn btn-danger">Delete</button>
            </form>
            <a class="btn btn-secondary text-white" id="back" asp-area="" asp-controller="Employees" asp-action="List">Back</a>
        </div> 
    </div>
</div>
